type User {
    id: ID!
    username: String!
    email: String!
}

input RegisterInput {
    username: String!
    email: String!
    password: String!
}

input LoginInput {
    email: String!
    password: String!
}

type AuthResponse {
    message: String!
}

type Query {
    getUser(email: String!): User
}

type Mutation {
    registerUser(input: RegisterInput!): AuthResponse
    loginUser(input: LoginInput!): AuthResponse
}
